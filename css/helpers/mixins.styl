border-radius()
  border-radius bord

side-size()
  width 200px
  height 180px

button()
  border-radius border-radius(n)
  border none 
  background transparent
  color white
  filter invert(100%)
  cursor pointer
  transition 100ms ease-out
  &:hover
    background main-color
  img
    width 60px

flex-center()
  display flex
  justify-content center
  align-items center

flex-between()
  display flex
  justify-content space-between
  align-items center

arrow-inside()
  img 
    margin-left 10px
    width 20px
    transform rotate(180deg)
    filter invert(100%)
